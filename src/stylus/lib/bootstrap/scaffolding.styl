// STRUCTURAL LAYOUT
// -----------------
body
  margin: 0
  text-rendering: optimizeLegibility

.container
  width: 940px
  margin: 0 auto

.container-fluid
  padding: 0 20px
  clearfix()
  > .sidebar
    float: left
    width: 220px

  > .content
    min-width: 700px
    max-width: 1180px
    margin-left: 240px

a
  color: $link-color
  text-decoration: none
  line-height: inherit
  font-weight: inherit
  &:hover
    color: $link-color-hover
    text-decoration: underline

// Buttons
.btn
  display: inline-block
  gradient-vertical-three-colors(#fff, #fff, 0.25, darken(#fff, 10))
  padding: 4px 14px
  text-shadow: 0 1px 1px rgba(white,.75)
  color: #333
  font-size(1)
  line-height: $baseline
  border: 1px solid #ccc
  border-bottom-color: #bbb
  border-radius: 4px
  $shadow = inset 0 1px 0 rgba(white,.2), 0 1px 2px rgba(black,.05)
  box-shadow: $shadow
  &:hover
    background-position: 0 -15px
    color: #333
    text-decoration: none

.primary
  gradient-vertical(#049CDB, #0064CD)
  color: #fff
  text-shadow: 0 -1px 0 rgba(0,0,0,.25)
  border: 1px solid darken(#0064CD, 10)
  border-bottom-color: darken(#0064CD, 15)
  &:hover
    color: #fff

.btn
  //.button(#1174C6)
  &.primary
    //#gradient > .vertical($blue, $blueDark)
    color: #fff
    text-shadow: 0 -1px 0 rgba(0,0,0,.25)
    border-color: $dark-blue $dark-blue darken($dark-blue, 15)
    border-color: rgba(black,.1) rgba(black,.1) fadein(rgba(black,.1), 15)
    &:hover
      color: #fff

  &.large
    font-size(1.2)
    border-radius: 6px

  &.small
    padding-right: 9px
    padding-left: 9px
    font-size(0.9)

  &.disabled
    background-image: none
    opacity: .65
    cursor: default
    box-shadow: none

  &:disabled
    background-image: none
    opacity: .65
    cursor: default
    box-shadow: none
    &.primary
      color: #fff

  &:active
    box-shadow: inset 0 3px 7px rgba(black,.15), 0 1px 2px rgba(black,.05)

button.btn
input[type=submit].btn
  &::-moz-focus-inner
    padding: 0
    border: 0