@import "./arrows"

// TWIPSY
// ------
.twipsy
  display: block
  position: absolute
  visibility: visible
  padding: 5px
  font-size(0.8)
  z-index: 1000
  opacity: .8

  &.above .twipsy-arrow
    arrow-above()
  &.left .twipsy-arrow
    arrow-left()
  &.below .twipsy-arrow
    arrow-below()
  &.right .twipsy-arrow
    arrow-right()

  .twipsy-inner
    padding: 3px 8px
    background-color: #000
    color: white
    text-align: center
    max-width: 200px
    text-decoration: none
    border-radius: 4px

  .twipsy-arrow
    position: absolute
    width: 0
    height: 0
